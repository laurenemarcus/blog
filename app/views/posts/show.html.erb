<div class="well">
  <h4><%= @post.title %></h4>
  <p><%= @post.date %></p>
  <p>
    <%= link_to "Edit Post", edit_post_path(@post) %> |
    <%= link_to "Delete Post", post_path(@post),
                              :data => {:confirm => "Sure?",
                              :method => "delete"} %>
  </p>
  <hr>
  <p><%= @post.entry %></p>
</div>


<div class="well">
<h4>Comments:</h4>

<div id="all_comments">
  <%= render @comments %>
</div>

<p><%= link_to "Add comment", new_post_comment_path(@post) %></p>
</div>
