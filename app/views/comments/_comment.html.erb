<% if comment.id %>
<div class="box", id="comment_<%= comment.id %>">
  <p><%= comment.reply %></p>
  <p class="right-align"><%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
    <%= link_to "Delete", post_comment_path(@post, comment),
    remote: true,
    :data => {:confirm => "Sure?",
      :method => :delete} %></p>
    </div>
<% end %>
